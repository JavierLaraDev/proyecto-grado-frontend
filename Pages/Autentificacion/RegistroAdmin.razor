@page "/registroAdmin"

<section class="admin-register d-flex align-items-center justify-content-center">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-6 col-lg-7 col-md-9">

                <div class="admin-card">

                    <!-- Logo -->
                    <div class="text-center mb-2">
                        <img src="assets/img/logo.png" alt="Briz" class="admin-logo" />
                    </div>

                    <!-- Título -->
                    <h3 class="admin-title">
                        Registro de Administrador
                    </h3>

                    <p class="admin-subtitle">
                        Complete la información para crear un nuevo administrador
                    </p>

                    <EditForm Model="UsuarioParaRegistro"
                              OnValidSubmit="RegistrarUsuario">

                        <DataAnnotationsValidator />

                        <div class="row g-3 mt-4">

                            <div class="col-md-6">
                                <label class="form-label">Usuario</label>
                                <InputText class="form-control admin-input"
                                           @bind-Value="UsuarioParaRegistro.NombreUsuario" />
                                <ValidationMessage For="(() => UsuarioParaRegistro.NombreUsuario)" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Nombres</label>
                                <InputText class="form-control admin-input"
                                           @bind-Value="UsuarioParaRegistro.Nombre" />
                                <ValidationMessage For="(() => UsuarioParaRegistro.Nombre)" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Apellidos</label>
                                <InputText class="form-control admin-input"
                                           @bind-Value="UsuarioParaRegistro.Apellido" />
                                <ValidationMessage For="(() => UsuarioParaRegistro.Apellido)" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Celular</label>
                                <InputNumber class="form-control admin-input"
                                             @bind-Value="UsuarioParaRegistro.NumeroCelular" />
                                <ValidationMessage For="(() => UsuarioParaRegistro.NumeroCelular)" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Dirección</label>
                                <InputText class="form-control admin-input"
                                           @bind-Value="UsuarioParaRegistro.Direccion" />
                                <ValidationMessage For="(() => UsuarioParaRegistro.Direccion)" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Correo electrónico</label>
                                <InputText class="form-control admin-input"
                                           @bind-Value="UsuarioParaRegistro.Email" />
                                <ValidationMessage For="(() => UsuarioParaRegistro.Email)" />
                            </div>

                            <div class="col-12">
                                <label class="form-label">Contraseña</label>
                                <InputText type="password"
                                           class="form-control admin-input"
                                           @bind-Value="UsuarioParaRegistro.Password" />
                                <ValidationMessage For="(() => UsuarioParaRegistro.Password)" />
                            </div>

                        </div>

                        <div class="d-grid mt-4">
                            <button type="submit" class="btn admin-btn">
                                Registrar Administrador
                            </button>
                        </div>

                    </EditForm>
                </div>

            </div>
        </div>
    </div>
</section>

